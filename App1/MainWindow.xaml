<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="TeamsPresenceWatcher"
    >

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel Padding="20" Spacing="10">
        <!-- 时间间隔设置 -->
        <TextBlock Text="停留时间间隔 (秒):" FontSize="16"/>
        <TextBox x:Name="IntervalTextBox" PlaceholderText="请输入时间间隔（秒）" InputScope="Number"/>

        <!-- 提前提醒时间设置 -->
        <TextBlock Text="提前提醒时间 (秒):" FontSize="16"/>
        <TextBox x:Name="ReminderTextBox" PlaceholderText="请输入提前提醒时间（秒）" InputScope="Number"/>
        
        <!-- 开启连续提醒 -->
        <CheckBox x:Name="ContinuousReminderCheckBox" IsChecked="{Binding ContinuousReminderEnabled, Mode=TwoWay}" Content="开启连续提醒"/>
        
        <!-- 保存按钮 -->
        <Button x:Name="SaveButton" Content="保存设置" Click="SaveButton_Click" HorizontalAlignment="Center" Padding="10,5"/>

        <!-- 倒计时显示 -->
        <TextBlock x:Name="CountdownLabel" Text="倒计时: 0秒" FontSize="20" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
